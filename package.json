{
  "name": "simply-ssr",
  "version": "1.0.0",
  "description": "ðŸ”­ a simply scalable web boilerplate: docker, node + secured express, parcel, react + ssr",
  "scripts": {
    "copy": "npm-run-all -s copy:*",
    "copy:certs": "cp -R ./server/certificates ./dist/server/certificates",
    "clean": "rimraf ./dist",
    "dev": "parcel serve client/index.html",
    "build": "npm-run-all -s clean build:* copy:*",
    "build:client": "parcel build client/index.html -d dist/client --public-url / --target browser --cache-dir dist/client/.cache --experimental-scope-hoisting --detailed-report --log-level 3",
    "build:server": "parcel build server/index.js -d dist/server --target node --cache-dir dist/server/.cache --detailed-report --log-level 3",
    "start:docker": "docker-compose build && docker-compose up --remove-orphans --force-recreate --abort-on-container-exit",
    "start": "npm-run-all -s build start:docker",
    "start:server": "cross-env PORT=8000 nodemon node ./server/index.js",
    "lint": "standard ./client/**/*.js ./server/**/*.js"
  },
  "keywords": [
    "boilerplate",
    "docker",
    "react",
    "ssr",
    "parcel"
  ],
  "author": "Michael Scott Hertzberg <mshertzberg@gmail.com>",
  "license": "WTFPL",
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": [
      "es6",
      "shared-node-browser"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.4",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "nodemon": "^1.18.10",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^5.0.0",
    "rimraf": "^2.6.3",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "spdy": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.3",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.0",
    "parcel": "^1.12.3",
    "standard": "^12.0.1"
  }
}
