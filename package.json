{
  "name": "simply-ssr",
  "version": "1.0.0",
  "description": "ðŸ”­ a simply scalable web boilerplate: docker, node + secured express, parcel, react + ssr",
  "scripts": {
    "clean": "rimraf ./dist ./.cache",
    "cp:assets": "cpy ./dist/client/**.{js,map} ./dist/client/static",
    "cp:assets:post": "rimraf ./dist/client/**.{js,map}",
    "dev": "NODE_ENV=development npm-run-all -s start:server",
    "dev:full": "NODE_ENV=development nodemon --watch ./src/client --watch ./src/server --exec npm run prod",
    "start:client": "DEBUG=app:client parcel serve ./src/client/index.html",
    "build": "npm-run-all -s clean build:client cp:assets cp:assets:post build:server",
    "build:client": "parcel build ./src/client/index.html -d ./dist/client --public-url / --target browser --cache-dir ./dist/client/.cache --detailed-report --log-level 3",
    "build:server": "parcel build ./src/server/index.js -d ./dist/server --target node --cache-dir ./dist/server/.cache --detailed-report --log-level 3",
    "start:docker": "docker-compose build && docker-compose up --remove-orphans --force-recreate --abort-on-container-exit",
    "start": "npm-run-all -s build start:docker",
    "start:server": "DEBUG=app:server nodemon ./dist/server/index.js",
    "lint": "standard ./src/client/**/*.js ./src/server/**/*.js",
    "prod": "npm-run-all -s build start:server"
  },
  "keywords": [
    "boilerplate",
    "docker",
    "react",
    "ssr",
    "parcel"
  ],
  "author": "Michael Scott Hertzberg <mshertzberg@gmail.com>",
  "license": "WTFPL",
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": [
      "es6",
      "shared-node-browser"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@reach/router": "^1.2.1",
    "cheerio": "^1.0.0-rc.3",
    "cpy-cli": "^2.0.0",
    "debug": "^4.1.1",
    "memory-usage": "^1.2.1",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.0",
    "parcel": "^1.12.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-head": "^3.1.1",
    "rimraf": "^3.0.0",
    "server": "^1.0.19"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.3.0",
    "standard": "^14.1.0"
  }
}
